<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrossPath.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CrossPath.Views"
    Shell.FlyoutBehavior="Flyout">

    <Tab Title="Live Map"
        Icon="{OnPlatform 'icon_map.svg'}">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}"/>
        </Tab>

    <Tab Title="NFC"
        Icon="{OnPlatform 'icon_nfc.svg'}">
            <ShellContent ContentTemplate="{DataTemplate views:NFCPage}"/>
    </Tab>

    <Tab Title="QR Code"
        Icon="{OnPlatform 'icon_qr.svg'}">
        <ShellContent ContentTemplate="{DataTemplate views:QRGenPage}"/>
    </Tab>
</Shell>
