<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPath.Views.ProfilePage"
             Title="Profile"
             xmlns:local="clr-namespace:CrossPath.ViewModels">

    <VerticalStackLayout Padding="5">
        <ImageButton x:Name="pfpImage" Source="profile_picture.svg" Clicked="OnPfPClicked" WidthRequest="256" HeightRequest="256"/>
        <Entry Completed="OnEntryComplete" Placeholder="Username here" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
        <Label 
            Text="Interests"
            VerticalOptions="Center" 
            HorizontalOptions="Start"/>
        <Frame CornerRadius="25">
        <ScrollView VerticalOptions="Center">
            <VerticalStackLayout>
                <ListView>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate> 
                </ListView>
            </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </VerticalStackLayout>
</ContentPage>