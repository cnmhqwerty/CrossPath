             x:Class="CrossPath.Views.ProfilePage"
             Title="Profile"
             xmlns:local="clr-namespace:CrossPath.ViewModels"
             BindingContext="{Binding }">
    <VerticalStackLayout Padding="5" >
        <ImageButton x:Name="pfpImage" Source="profile_picture.svg" Clicked="OnPfPClicked" WidthRequest="256" HeightRequest="256"/>
        <Entry Completed="OnEntryComplete" Placeholder="Username here" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
        <Label 
            Text="Interests"
            VerticalOptions="Center" 
            HorizontalOptions="Start"/>
        <Frame CornerRadius="25">
            <ListView x:Name="InterestList" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <HorizontalStackLayout>
                                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Large" VerticalTextAlignment="Center" VerticalOptions="Center"/>
                                    <CheckBox x:Name="{Binding Name}" CheckedChanged="OnCheckBoxCheckedChanged" VerticalOptions="Center" IsChecked="{Binding IsChecked}"/>
                                </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                
                
