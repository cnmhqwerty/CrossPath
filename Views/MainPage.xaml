<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="CrossPath.Views.MainPage"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            xmlns:local="clr-namespace:CrossPath.Views"
            android:TabbedPage.IsSwipePagingEnabled="false">

    <local:ProfilePage Title="My Profile"
                IconImageSource="{AppThemeBinding Light='dark_icon_profile.svg', Dark='light_icon_profile.svg'}">
    </local:ProfilePage>

    <local:MapPage Title="Connections"
                IconImageSource="{AppThemeBinding Light='dark_icon_map.svg', Dark='light_icon_map.svg'}">
    </local:MapPage>

    <local:QRGenPage Title="Local Share"
                IconImageSource="{AppThemeBinding Light='dark_icon_qr.svg', Dark='light_icon_qr.svg'}">
    </local:QRGenPage>

</TabbedPage>